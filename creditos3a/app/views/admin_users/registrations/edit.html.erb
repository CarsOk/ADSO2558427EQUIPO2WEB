
<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Editar Perfil de Administrador</h5>
        </div>
        <div class="card-body">
        <%= form_for(@admin_user, url: update_admin_user_profile_path, method: :put, html: { class: 'form-horizontal' }) do |f| %>
          <div class="form-group">
          <%= f.label :first_name, 'Nombre 1', class: 'control-label col-md-2' %>
          <div class="col-md-10">
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :second_name, 'Nombre 2', class: 'control-label col-md-2' %>
          <div class="col-md-10">
            <%= f.text_field :second_name, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :last_name_1, 'Apellido 1', class: 'control-label col-md-2' %>
          <div class="col-md-10">
            <%= f.text_field :last_name_1, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :last_name_2, 'Apellido 2', class: 'control-label col-md-2' %>
          <div class="col-md-10">
            <%= f.text_field :last_name_2, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, 'Correo electrónico', class: 'control-label col-md-2' %>
          <div class="col-md-10">
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :imagen, 'Imagen de perfil', class: 'control-label col-md-2' %>
          <div class="col-md-10">
            <%= f.file_field :imagen, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, 'Contraseña (deja en blanco para mantener la actual)', class: 'control-label col-md-2' %>
          <div class="col-md-10">
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, 'Confirmar contraseña', class: 'control-label col-md-2' %>
          <div class="col-md-10">
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= f.submit 'Guardar cambios', class: 'btn btn-primary' %>
          </div>
        </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


