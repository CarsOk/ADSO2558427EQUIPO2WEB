<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h3 class="mb-4">Información de la Categoría</h3>
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @categoria.id %></td>
            <td><%= @categoria.nombre %></td>
            <td>
              <%= link_to "Editar", edit_admin_categoria_path(@categoria), class: "btn btn-warning btn-sm mr-2" %>
              <%= link_to 'Borrar', admin_categoria_path(@categoria), method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 mx-auto">
      <h3 class="mt-4 mb-3">Productos de la Categoría</h3>
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripción</th>
          </tr>
        </thead>
        <tbody>
          <% @productos.each do |producto| %>
            <tr>
              <td><%= producto.id %></td>
              <td><%= producto.nombre %></td>
              <td><%= producto.descripcion %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "Crear productos", admin_categoria_productos_path(@categoria), class: "btn btn-primary" %>
      <%= link_to "Ver todas las Categorías", admin_categorias_path, class: "btn btn-warning btn-sm mr-2" %>
    </div>
  </div>
</div>

