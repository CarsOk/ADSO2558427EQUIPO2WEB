<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="display-4">Lista de Productos</h1>
      <div class="mb-4">
        <%= link_to "Crear Producto", new_admin_categoria_producto_path(@categoria), class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <% @productos.each do |producto| %>
      <div class="col-md-4 mb-4">
        <div class="card border-rounded">
          <%= image_tag producto.avatar.url, class: "card-img-top img-fluid" %>
          <div class="card-body">
            <h5 class="card-title"><%= producto.nombre %></h5>
            <p class="card-text"><%= producto.descripcion %></p>
            <p class="card-text"><strong>Precio: <%= number_to_currency(producto.precio) %></strong></p>
            <p class="card-text"><strong>Cantidad: <%= producto.cantidad %></strong></p>
            <% if producto.disponible %>
            <p class="text-success">Producto Disponible</p>
            <% else %>
            <p class="text-danger">Producto No Disponible</p>
            <% end %>
            
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to "Ver detalles", admin_categoria_producto_path(@categoria, producto), class: "btn btn-warning" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
