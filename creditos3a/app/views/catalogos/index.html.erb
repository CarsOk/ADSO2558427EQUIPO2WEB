<h1>Lista de Catálogos</h1>

<div class="container">
  <div class="row">
    <% @catalogos.each do |catalogo| %>
      <div class="col-md-4 mb-4">
        <div class="card border-rounded">
          <div class="card-body">
            <h5 class="card-title"><%= catalogo.nombre %></h5>
            <p class="card-text">Descripción</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
              <%= link_to "Ver Categorías", catalogo_categorias_path(catalogo), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
