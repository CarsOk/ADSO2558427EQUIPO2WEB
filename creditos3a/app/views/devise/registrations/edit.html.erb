<div class="container">
  <h1 class="mt-4">Editar Perfil de <%= @user.first_name %></h1>

  <div class="row">
  <div class="col-md-6">
  <%= form_for(@user, url: user_registration_path, method: :put, html: { multipart: true }) do |f| %>
    <!-- Otros campos -->
    <div class="field">
    <%= f.label :imagen %>
    <%= f.file_field :imagen, class: 'btn-file' %>
  </div>
      <div class="form-group">
        <%= f.label :first_name, 'Nombre' %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :second_name, 'Segundo Nombre' %>
        <%= f.text_field :second_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :last_name_1, 'Apellido Paterno' %>
        <%= f.text_field :last_name_1, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :last_name_2, 'Apellido Materno' %>
        <%= f.text_field :last_name_2, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :identification, 'Identificación' %>
        <%= f.text_field :identification, class: 'form-control' %>
      </div>

      <div class="form-group">
          <%= f.label :telefono, 'Teléfono' %>
          <%= f.text_field :telefono, class: 'form-control' %>
        </div>

      <div class="form-group">
        <%= f.label :address, 'Dirección' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
      <!-- Agrega otros campos según tus necesidades -->
      <div class="mt-3">
        <%= f.submit 'Guardar Cambios', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
</div>