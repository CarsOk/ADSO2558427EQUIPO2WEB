<section class="vh-200" style="background-color: #f4f5f7;">
<center><h1 class="htitulo">Pefil de <%= @user.first_name %></h1>
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-10">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
          <div class="col-md-4 gradient-custom text-center text-white d-flex flex-column justify-content-center"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem; padding: 20px;">
              <% if @user.imagen.attached? %>
               <%= image_tag @user.imagen, class: 'rounded-circle profile-image', style: 'width: 120px; height: 120px; margin: 0 auto;' %>
             <% else %>
               <p>Aún no has agregado una imagen de perfil. Puedes hacerlo <a href="<%= edit_user_profile_path %>">aquí</a>.</p>
               <% end %>
            </div>
            <div class="col-md-8">
            <div class="card-body p-4">
            <h6 style="font-size: 25px;">INFORMACION</h6>
              <hr class="mt-0 mb-4">
              <div class="row pt-1">
                <div class="col-6 mb-3">
                <h6 style="font-size: 18px;">Nombre 1</h6>
                <p class="text-muted" style="font-size: 16px;"><%= @user.first_name %></p>
                </div>
                <div class="col-6 mb-3">
                <h6 style="font-size: 18px;">Nombre 2</h6>
                <p class="text-muted" style="font-size: 16px;"><%= @user.second_name %></p>
                </div>
                <div class="col-6 mb-3">
                <h6 style="font-size: 18px;">Apellido 1</h6>
                <p class="text-muted" style="font-size: 16px;"><%= @user.last_name_2 %></p>
                </div>
                <div class="col-6 mb-3">
                <h6 style="font-size: 18px;">Apellido 2</h6>
                <p class="text-muted" style="font-size: 16px;"><%= @user.last_name_2 %></p>
                </div>
                <div class="col-6 mb-3">
                  <<h6 style="font-size: 18px;">Email</h6>
                  <p class="text-muted" style="font-size: 16px;"><%= @user.email %></p>
                </div>
                <div class="col-6 mb-3">
                <h6 style="font-size: 18px;">Teléfono</h6>
                <p class="text-muted" style="font-size: 16px;"><%= @user.telefono %></p>
              </div>              
                <div class="d-flex justify-content-start">
                  <a href="#!"><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                  <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                  <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
                </div>
              </div>
              <% if current_user.administrador? %>
              <%= link_to 'Editar', edit_user_registration_path, class: 'btn btn-secondary' %>
              <%= link_to 'Ver usuarios con pedidos', show_user_dashboard_path, class: 'btn btn-primary' %>
              <%= link_to 'Cerrar sesión', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
            <% else %>
              <%= link_to 'Editar', edit_user_registration_path, class: 'btn btn-secondary' %>
              <%= link_to 'Ver mis pedidos realizados', pedidos_realizados_pedidos_path, class: 'btn btn-primary' %>
              <%= link_to 'Cerrar sesión', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
            <% end %>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
