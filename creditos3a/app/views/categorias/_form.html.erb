<div class="row">
  <div class="col-md-6">
    <%= simple_form_for @categoria do |f| %>
      <div class="form-group">
        <%= f.label :nombre %>
        <%= f.input :nombre, input_html: { class: 'form-control is-valid string optional' } %>
      </div>
      
      <div class="form-group">
  <%= f.label :catalogo_id, 'Seleccionar un catálogo (opcional)' %>
  <%= f.collection_select :catalogo_id, Catalogo.all, :id, :nombre, { include_blank: "Sin catálogo" }, class: 'form-control' %>
</div>

<div class="form-group">
  <div class="form-check">
    <%= f.check_box :catalogo_id, class: 'form-check-input' %>
    <%= f.label :catalogo_id, class: 'form-check-label' %> Asignar a un catálogo (opcional)
  </div>
</div>


      <div class="form-group">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>

