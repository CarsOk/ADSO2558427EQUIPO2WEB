<%= simple_form_for [@categoria, @producto] do |f| %>
    <%= f.input :nombre, input_html: { class: 'form-control is-valid string optional' } %>
    <%= f.input :descripcion, input_html: { class: 'form-control is-valid string optional' } %>
    <%= f.association :categoria, label_method: :nombre, input_html: { class: 'form-control is-valid string optional' } %>
    <%= f.button :submit %>
  <% end %>