<h1>Lista de Administradores</h1>

<div class="admin-cards">
  <% @admin_users.each do |admin_user| %>
    <div class="admin-card">
      <h3><%= admin_user.email %></h3>
      <p><strong>Primer Nombre:</strong> <%= admin_user.first_name %></p>
      <p><strong>Segundo Nombre:</strong> <%= admin_user.second_name %></p>
      <p><strong>Primer Apellido:</strong> <%= admin_user.last_name_1 %></p>
      <p><strong>Segundo Apellido:</strong> <%= admin_user.last_name_2 %></p>
      <p><strong>Identification:</strong> <%= admin_user.identification %></p>
      <p><strong>Address:</strong> <%= admin_user.address %></p>
      <!-- Agrega aquÃ­ los campos adicionales que desees mostrar -->
    </div>
  <% end %>
</div>