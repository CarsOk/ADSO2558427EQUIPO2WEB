<style>
body {
    font-family: sans-serif;
    font-size: 12px;
  }
  
  .header {
    background-color: #6633ff;
    color: white;
    padding: 10px 20px;
    text-align: center;
  }
  
  .icono-header {
    float: right;
    width: 50px;
    height: 50px;
  }
  
  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }
  
  th, td {
    border: 1px solid #ccc;
    padding: 5px;
    text-align: center;
  }
  
  th {
    background-color: #f0f0f0;
  }
  
  tr:nth-child(odd) {
    background-color: #f9f9f9;
  }
  
  .total {
    font-weight: bold;
  }
  
  .producto {
    width: 300px;
  }
  
</style>

<div class="header">
  <center><h2>Lista de pedidos</h2>
  <%= image_tag "icono.png", class: 'icono-header'%>
</div>
 <hr><br>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Informacion</th>
      <th class="producto">Producto</th>
      <th>Cantidad</th>
      <th>Precio Unitario</th>
      <th>Precio Total</th>
      <th>Fecha del pedido</th>
    </tr>
  </thead>
  <tbody>
    <% @users_with_pedidos.each do |user| %>
      <% user.pedidos.group_by(&:producto).each do |producto, pedidos| %>
        <tr>
          <td><%= user.first_name %> <%= user.last_name_1 %></td>
          <td><b>Telefono:</b><%= user.telefono%><br><b>Documento:</b><%= user.identification %><br><b>Direccion:</b><%= user.address %></td>
          <td><%= producto.nombre %></td>
          <td><%= pedidos.count %></td>
          <td><%= number_to_currency(producto.precio) %></td>
          <td><%= number_to_currency(pedidos.count * producto.precio) %></td>
          <td><%= pedidos.first.created_at.strftime("%d/%m/%Y") %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
